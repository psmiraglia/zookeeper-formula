[Unit]
Description=Apache Zookeeper
Documentation=http://zookeeper.apache.org
Requires=network.target remote-fs.target
After=network.target remote-fs.target

[Service]
Type=simple
PIDFile={{ zookeeper.home }}/zookeeper.pid
User={{ zookeeper.user }}
Group={{ zookeeper.group }}
Environment="JAVA_HOME={{ zookeeper.java_home }}"
ExecStart={{ zookeeper.home }}/bin/zkServer.sh start
ExecStop={{ zookeeper.home }}/bin/zkServer.sh stop
Restart=on-failure
SyslogIdentifier={{ zookeeper.service }}
WorkingDirectory={{ zookeeper.home  }}

[Install]
WantedBy=multi-user.target
