[Unit]
Description=Apache Zookeeper
Documentation=http://zookeeper.apache.org
Requires=network.target remote-fs.target
After=network.target remote-fs.target

[Service]
Type=forking
User={{ zk.user }}
Group={{ zk.group }}
{%- for key, value in zk.env_vars.iteritems() | sort %}
Environment="{{ key }}={{ value }}"
{%- endfor %}
ExecStart={{ zk.home }}/bin/zkServer.sh start
ExecStop={{ zk.home }}/bin/zkServer.sh stop
ExecReload={{ zk.home }}/bin/zkServer.sh restart
Restart=on-failure
SyslogIdentifier={{ zk.service }}
WorkingDirectory={{ zk.home  }}

[Install]
WantedBy=multi-user.target
